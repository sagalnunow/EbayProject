@model IEnumerable<SomaliEbayProject.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Banner1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Banner2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Banner3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <hr />  
        @foreach (var product in Model)
        {
            <div class="col-md-4 text-center" style="margin-top:8px;">

                <div class="card mb-3">
                    <h3 class="card-header bg-info">@product.ProductName</h3>
                    <div class="card-body bg-light text-center" style="max-height:100px;">
                        <h5 class="card-title">@product.ProductDescription</h5>
                    </div>


                    @if (product.Image != null)
                    {
                        <img class="img img-thumbnail" style="min-height: 150px; max-width: 200px; display: block" src="data:image;base64, @Convert.ToBase64String(product.Image)" />
                    }
                    else
                    {
                        <p class="text-danger">No Image</p>
                    }
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Qty: @product.Qty | Discount: $@product.Discount $Price: <text class="bg-danger" style="font-weight:bold; color: white;">$@product.Price</text></li>

                        <li class="list-group-item text-center">
                            @if (product.Qty > 0)
                            {
                                <a href="/Orders/Create/@product.Id" class="btn btn-sm btn-success">Order Now</a>
                            }
                            else
                            {
                                <a href="/Orders/Create/@product.Id" class="btn btn-sm btn-danger disabled"> <text> Out of Order</text></a>
                            }

                        </li>

                    </ul>

                </div>
                
            </div>

        }

        </div>

</div>
